<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPriceDropdown"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Minimum and Maximum input fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/etMinimum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/search_result_rounded_edittext"
            android:hint="Minimum"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/etMaximum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/search_result_rounded_edittext"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:hint="Maximum"
            android:paddingStart="16dp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Reset and See Items buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_result_reset_button_background"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Reset" />

        <Button
            android:id="@+id/btnSeeItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/search_result_see_items_button_background"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:text="See Items" />
    </LinearLayout>

</LinearLayout>
